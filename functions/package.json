{
  "name": "functions",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "concurrently \"npm run build:watch\" \"GOOGLE_APPLICATION_CREDENTIALS=.firebase-adminsdk.json firebase emulators:start --only functions\"",
    "serve": "npm run build && GOOGLE_APPLICATION_CREDENTIALS=.firebase-adminsdk.json firebase emulators:start --only functions",
    "shell": "npm run build && GOOGLE_APPLICATION_CREDENTIALS=.firebase-adminsdk.json firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "24"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@sentry/node": "^10.38.0",
    "firebase-admin": "^13.6.0",
    "firebase-functions": "^7.0.5"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "firebase-tools": "^15.5.1",
    "typescript": "^5.9.3"
  },
  "private": true
}
